<%= form_for @article do |f| %>
 
  <% if @article.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@article.errors.count, "error") %> prohibited
        this article from being saved:
      </h2>
      <ul>
        <% @article.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
 
  <table class="table table-striped">
    <tr>
    <td>
    <p>
      <%= f.label :title %><br>
      <%= f.text_field :title, class: "form-control", placeholder: "Enter a nice and catchy title", rows: 2%>
    </p>
    </tr>
    </td>
    
    <!-- <div class="col-md-12"> -->
    <tr>
    <td>
    <p>
      <%= f.label :text %><br>
      <%= f.text_area :text, class: "form-control", placeholder: "Write your heart out", rows: 10 %>
    </p>
    </td>
    </tr>
    <!-- </div> -->
   
    <tr>
    <td>
    <p>
      <%= f.label :summary %><br>
      <%= f.text_area :summary, class: "form-control", placeholder: "Give your readers a small description to relate to your article" %>
    </p>
    </td>
    </tr>
    
    <tr>
    <td>
    <p>
      <%= f.submit "Submit", class: "btn btn-primary" %>
    </p>
    </td>
    </tr>
  </table>
 
<% end %> 

