<h1>ARTICLE : </h1>

<!DOCTYPE html>
<html>
<head>
<style>

table {
    font-family: arial, sans-serif;
    border-collapse: collapse;
    width: 100%;
}

td, th {
    border: 1px solid #aaaaaa;
    text-align: left;
    padding: 8px;
}

tr:nth-child(odd) {
    background-color: beige;
}
</style>
</head>

<body>
<table>
 <tr>
 <td>
 <p>
   <strong>Title:</strong>
   <%= @article.title %>
   <strong>Submitted :</strong>
   <%= time_ago_in_words (@article.created_at) %> ago
 </p>
 </td>
 </tr>
 
 <tr>
 <td>
 <p>
  <strong>Text:</strong><br>
  <%= @article.text %>
 </p>
 </td>
 </tr>

  <tr>
  <td>
      <h2>Comments:</h2>

    <div class="scroll">
      <!-- <h2>Comments:</h2> -->
      <div class="scrollbar" id="style-3", style= "margin-left: 100px;
        float: left;
        height: 300px;
        width: 800px;
        /*background: #F5F5F5;*/
        overflow-y: scroll;
        margin-bottom: 25px;">
      <div class="force-overflow" style="min-height: 450px">
      <style>
        #style-3::-webkit-scrollbar-track
        {
          -webkit-box-shadow: inset 0 0 6px rgba(0,0,0,0.3);
          background-color: #9999FA;
        }

        #style-3::-webkit-scrollbar
        {
          width: 6px;
          background-color: #FF0000;
        }

        #style-3::-webkit-scrollbar-thumb
        {
          background-color: #000000;
        }
      </style>
        <%= render @article.comments %>
      </div>
      </div>
      </td>
      </tr>
    </div>
  <tr>
  <td> 
  <h2>Add a Comment:</h2>
  <%= render 'comments/form' %>
  </td>
  </tr>
<!-- <p>
  <!-- <strong>Summary:</strong> -->
  <%#= @article.summary %>
<!-- </p> -->

<tr>
<td> <%= link_to 'Back', articles_path %>
<%= link_to 'Edit', edit_article_path(@article) %></td>
</tr>

</table>
</body>