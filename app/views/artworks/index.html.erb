
  <h1 style= "color:white; font-style:italic; font-family:fantasy; text-align:center">
   Articles Listing <br>
  </h1>
  <!DOCTYPE html>
  <html>
  <style> 
      body {
             background-image: url("/blogbackground1.jpg"); 
             background-size: cover;
             background-repeat: no-repeat;
           }
             .table{
    background-color: white;
    border-radius: 25px;
  } 
  .table>tbody>tr>th {
    border-top: none;
  }
  </style>
  </html>

  
  <table class="table">
  <tr>
    <th>Title</th>
    <!-- <th>Text</th> -->
    <th>Summary</th>
    <th>Preview</th>
    <th>Actions</th>  
  </tr>
  <% @articles.each do |article| %>
    <tr>
      <td><%= article.title %></td>
      <!-- <td><%#= article.text %></td> -->
      <td><%= article.summary %></td>
      <td><%= link_to image_tag(article.image.url(:medium)), article %></td>

      <td>
        <%= link_to '', article_path(article), class: "glyphicon glyphicon-book" %> 

        <%= link_to '', edit_article_path(article), class: "glyphicon glyphicon-pencil" %>  
          <%= link_to '', article_path(article), class: "glyphicon glyphicon-trash",
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>

    </tr>
  <% end %>
<%#= will_paginate @articles %>
  
</table>

  <table>
      <tr>
      <!-- <td style="padding-right: 600px;"> -->
